# ===========================================
# FitVire Web Admin - Environment Variables
# ===========================================

# Application Configuration
VITE_APP_NAME="FitVire Management"
VITE_APP_VERSION=1.0.0
VITE_APP_ENV=development
VITE_APP_DESCRIPTION="Management Admin Dashboard for FitVire Platform"

# API Configuration
VITE_API_BASE_URL=http://localhost:8000/api/
VITE_API_TIMEOUT=30000
VITE_API_RETRY_ATTEMPTS=3

# Authentication Configuration
VITE_JWT_ACCESS_TOKEN_EXPIRY=15
VITE_JWT_REFRESH_TOKEN_EXPIRY=7
VITE_SESSION_TIMEOUT=60

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false
VITE_ENABLE_PERFORMANCE_MONITORING=false
VITE_ENABLE_DEBUG_MODE=true

# File Upload Configuration
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# WebSocket Configuration
VITE_WS_URL=ws://localhost:8000/ws
VITE_WS_RECONNECT_INTERVAL=5000
VITE_WS_MAX_RECONNECT_ATTEMPTS=5

# External Services (Optional)
VITE_GOOGLE_ANALYTICS_ID=
VITE_SENTRY_DSN=
VITE_MIXPANEL_PROJECT_TOKEN=
